{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: build current file",
            "type": "shell",
            "command": "rustc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": ["$rustc"]
        }
    ]
}
